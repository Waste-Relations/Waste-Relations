<h1>
  Drop Off Locations</h1>


<button class="collapsible pa3">Click Here to Add New</button>
<div class="content">
  <form action="/action_page.php">
    Organisation:
    <br>
    <input type="text" name="organisation" id="organisation" class="pa2 input-reset ba bg-transparent w-100 measure hover-bg-black hover-white w-100">
    <br> Province:
    <br>
    <select id="selectProvince" class="pa2 ba bg-transparent w-100 measure hover-bg-black hover-white w-100">
      <option value="ON">Ontario</option>
    </select>
    <br> City/Town:
    <br>
    <select id="selectCity" class="pa2 ba bg-transparent w-100 measure hover-bg-black hover-white w-100">
      <option value="TORONTO">Toronto</option>
    </select>
    <br> Postal Code:
    <br>
    <input type="text" name="postalCode" id="postalCode" class="pa2 input-reset ba bg-transparent w-100 measure hover-bg-black hover-white w-100">
    <br> Address:
    <br>
    <input type="text" name="thoroughFare" id="thoroughFare" class="pa2 input-reset ba bg-transparent w-100 measure hover-bg-black hover-white w-100">
    <br>
    <br>
    <input type="submit" value="Submit" id="submit">
  </form>
</div>

<div class="tableView">
  {{!--
  <div class="overflow-auto"> --}} {{#each values}}
    <div id={{this.id}} class="dataBlock mw5 center bg-white br3 pa3 pa4-ns mv3 ba b--black-10 animated fadeIn">
      <div class="left">
        <div>Organisation:
          <div id="organisation-{{this.id}}"> {{this.organisation}}</div>
        </div>
        <div>City/Town:
          <div id="locality-{{this.id}}">
            {{this.locality}}</div>
        </div>
        <div>Postal Code:
          <div id="postalCode-{{this.id}}">
            {{this.postalCode}}</div>
        </div>
        <div>Address:
          <div id="thoroughFare-{{this.id}}">
            {{this.thoroughFare}} </div>
        </div>
      </div>
      <div class="right">
        <button class="delete" data-value={{this.id}} onclick="deleteRequest({{this.id}});"> X </button>
        <button class="edit" id="edit-{{this.id}}" onclick="updateRequest({{this.id}}); this.onclick = null;">edit</button>
      </div>
    </div>
    {{/each}} {{!-- </div> --}}
</div>

